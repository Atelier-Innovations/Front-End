{
  "compilerOptions": {
    "target": "ESNext",
    "module": "umd",
    "lib": [
      "ESNext",
      "dom"
    ],
    "jsx": "react",
    "noEmit": true,
    "sourceMap": true,
    /* Strict Type-Checking Options */
    // "strict": true,
    // "noImplicitAny": true,
    // "strictNullChecks": true,

    //^we can turn this on if we want. discuss!

    /* Module Resolution Options */
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}